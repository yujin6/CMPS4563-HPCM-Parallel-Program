
#!/bin/bash
# ==============================
#PBS -l walltime=01:00:00
#PBS -l nice=10
#PBS -l nodes=4:ppn=32
#PBS -q default
# ==============================
ExecutableName=YoshimuraParVer_Exe
FileName=YoshimuraParVer.c
# ==============================
# Compile your code
mpicc -o $PBS_O_WORKDIR/$ExecutableName $PBS_O_WORKDIR/$FileName

# Run your executable
mpirun --mca mpi_cuda_support 0 $PBS_O_WORKDIR/$ExecutableName 14
# ==============================
